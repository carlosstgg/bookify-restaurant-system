{
  "compilerOptions": {
    // Output folders
    "rootDir": "./src",
    "outDir": "./dist",

    // Module system for Node.js
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    // TypeScript strict mode
    "strict": true,

    // Allow ES module-style imports in CommonJS
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Node.js types
    "types": ["node"],

    // Debugging helpers
    "sourceMap": true,

    // Skip slow type checking of node modules
    "skipLibCheck": true,

    // For Prisma + Express compatibility
    "isolatedModules": false,
    "verbatimModuleSyntax": false
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
